.main_content
  #recipe_top.row
    .col-md-6
      #recipe_info
        %h1 @recipe.title
        %p= @recipe.description= recipe.description

  .row
    .col-md-6
      #fixin
        %h2 Fixins
        %ul
          - @recipe.fixins.each do |fixin|
            %li= fixin.name

      .col-md-6
        #directions
          %h2 Directions 
          %ul
            - @recipe.directions.each do |direction|
            %li= direction.step

  .row
    .col-md-12
    = link_to "Back", root_path, :class "btn btn-default"
    = link_to "Edit", edit_recipe_path, :class "btn btn-default"
    = link_to "Delete", recipe_path, :method :delete, data: {confirm: "Are you sure?"},     class: "btn btn-default"
